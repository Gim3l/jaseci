{
    "name": "jac",
    "displayName": "JAC",
    "description": "Jac Programming Language",
    "version": "1.0.1",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:jac.viewGraph",
        "onCommand:jac.run"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "jac.run",
                "title": "JAC: Run",
                "when": "editorTextFocus && editorLangId == dot"
            },
            {
                "command": "jac.viewGraph",
                "title": "JAC: View Graph",
                "when": "editorTextFocus && editorLangId == dot"
            }
        ],
        "keybindings": {
            "command": "jac.viewGraph",
            "key": "ctrl+shift+v",
            "mac": "shift+cmd+v",
            "when": "editorTextFocus && editorLangId == dot"
        },
        "languages": [
            {
                "id": "jac",
                "aliases": [
                    "Jac Programming Language",
                    "jac"
                ],
                "extensions": [
                    ".jac"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "dot",
                "aliases": [
                    "JAC (DOT)"
                ],
                "extensions": [
                    ".gv",
                    ".dot",
                    ".DOT"
                ],
                "configuration": "dot/dot.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "jac",
                "scopeName": "source.jac",
                "path": "./syntaxes/jac.tmLanguage.json"
            },
            {
                "language": "dot",
                "scopeName": "source.dot",
                "path": "dot/syntaxes/dot.tmLanguage"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.66.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "@vscode/test-electron": "^2.0.3",
        "eslint": "^8.6.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.5.4"
    },
    "dependencies": {
        "@hpcc-js/wasm": "^1.14.1"
    }
}